<!DOCTYPE html>
<html>

<head>
  <title>books</title>
  <link rel="stylesheet" href="./styles/base.css" />
  <link rel="stylesheet" href="./styles/layout.css" />
</head>

<body>

  <%- include('../layouts/header') %>

  <main>

    <h3>Saved Books: <%= count %></h3>

    <% books.forEach(item => { %>
    <div class="card-container">
      <img src="<%= item.image_url %>">
      <h2><%= item.title %></h2>
      <h3><%= item.authors %></h3>
      <p><%= item.summary %></p>
      <h4><%= item.isbn %></h4>
      <h6><%= books.bookshelves %></h6>

      <a href="/books/<%= item.id %>">View Details</a>

    </div>
    <% }) %>

  </main>
</body>

</html>